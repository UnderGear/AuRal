<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/dialogroot">
 
 	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/dialogName" android:text="Name the Location" />
	<EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/dialogEditName" android:text="" />
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/dialogSyn" android:text="Choose a SynthDef" />
 	<Spinner android:id="@+id/SynthSpin" android:layout_height="wrap_content" android:layout_width="match_parent" >
 	
 	</Spinner>
 	<CheckBox android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/dialogRemove" android:text="Remove Location" />
 	<CheckBox android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/dialogSubmit" android:text="Submit Location to Server" />
 
</LinearLayout>
